@model QuizApps.Models.SignUp

<div id="signUp" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Sign Up</h4>
            </div>
            <div class="modal-body">
                @using (Html.BeginForm("Register", "Account", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "contol-label" })
                    <!-- Text input-->
                    <div class="form-group">
                        @Html.LabelFor(u => u.FName, new { @class = "control-label" })<span style="color:red;">*</span>
                        <div class="inputGroupContainer">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="fa fa-user" aria-hidden="true"></i></span>
                                @Html.EditorFor(u => u.FName, new { htmlAttributes = new { @class = "form-control", @placeholder = "First Name" } })
                            </div>
                        </div>
                        @Html.ValidationMessageFor(u => u.FName, "", new { @style = "font-family: inherit;color:#ff6666;" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(u => u.LName, new { @class = "control-label" })<span style="color:red;">*</span>
                        <div class="inputGroupContainer">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="fa fa-user" aria-hidden="true"></i></span>
                                @Html.EditorFor(u => u.LName, new { htmlAttributes = new { @class = "form-control", @placeholder = "Last Name" } })
                            </div>
                        </div>
                        @Html.ValidationMessageFor(u => u.LName, "", new { @style = "font-family: inherit;color:#ff6666;" })
                    </div>
                    <!-- Text input-->
                    <div class="form-group">
                        <label class=" control-label">Email Id</label><span style="color:red;">*</span>
                        <div class="inputGroupContainer">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="fa fa-envelope" aria-hidden="true"></i></span>
                                @Html.EditorFor(u => u.EmailId, new { htmlAttributes = new { @class = "form-control", @placeholder = "Email Id" } })
                            </div>
                        </div>
                        @Html.ValidationMessageFor(u => u.EmailId, "", new { @style = "font-family: inherit;color:#ff6666;" })
                    </div>
                    <!-- Text input-->
                    <div class="form-group">
                        <label class="control-label">Roll Number</label><span style="color:red;">*</span>
                        <div class="inputGroupContainer">
                            <div class="input-group" style="width: 100%;">
                                <span class="input-group-addon" style="width: 36px; padding: 3px 8px; ">
                                    <img src="~/images/roll.png" />@*<i class="fa fa-id-badge" aria-hidden="true"></i>*@
                                </span>
                                @Html.EditorFor(u => u.Rollno, "", new { htmlAttributes = new { @class = "form-control", @placeholder = "Roll Number" } })
                            </div>
                        </div>
                        @Html.ValidationMessageFor(u => u.Rollno, "", new { @style = "font-family: inherit;color:#ff6666;" })
                    </div>

                    <!-- Text input-->
                    <div class="form-group">
                        <label class="control-label">Branch</label><span style="color:red;">*</span>
                        <div class="inputGroupContainer">
                            <div class="input-group" style="width: 100%;">
                                <span class="input-group-addon" style="width: 36px; padding: 3px 8px; ">
                                    <img src="~/images/branch.png" />
                                    @*<i class="fa fa-university" aria-hidden="true"></i>*@
                                </span>
                                @Html.EditorFor(u => u.Branch, "", new { htmlAttributes = new { @class = "form-control", @placeholder = "Branch" } })
                            </div>
                        </div>
                        @Html.ValidationMessageFor(u => u.Branch, "", new { @style = "font-family: inherit;color:#ff6666;" })
                    </div>
                    <div class="form-group">
                        <label class="control-label">College Name</label><span style="color:red;">*</span>
                        <div class="inputGroupContainer">
                            <div class="input-group" style="width: 100%;">
                                <span class="input-group-addon" style="width: 36px; padding: 3px 8px; ">
                                    <img src="~/images/college.png" />
                                </span>
                                @Html.EditorFor(u => u.CllgeName, "", new { htmlAttributes = new { @class = "form-control", @placeholder = "College Name" } })
                            </div>
                        </div>
                        @Html.ValidationMessageFor(u => u.CllgeName, "", new { @style = "font-family: inherit;color:#ff6666;" })
                    </div>
                    <div class="form-group">
                        <label class="control-label">Mobile Number</label><span style="color:red;">*</span>
                        <div class="inputGroupContainer">
                            <div class="input-group" style="width: 100%;">
                                <span class="input-group-addon" style="width: 36px; padding: 3px 8px; ">
                                    <img src="~/images/mobile.png" />@*<i class="fa fa-id-badge" aria-hidden="true"></i>*@
                                </span>
                                @Html.EditorFor(u => u.Mobno, "", new { htmlAttributes = new { @class = "form-control", @placeholder = "Mobile Number" } })
                            </div>
                        </div>
                        @Html.ValidationMessageFor(u => u.Mobno, "", new { @style = "font-family: inherit;color:#ff6666;" })
                    </div>
                    <div class="form-group">
                        <label class="control-label">Gender</label><span style="color:red;">*</span>
                        <div class="inputGroupContainer">
                            <div class="input-group" style="width: 100%;">
                                <span class="input-group-addon" style="width: 36px; padding: 3px 8px; ">
                                    <img src="~/images/gender.png" />@*<i class="fa fa-id-badge" aria-hidden="true"></i>*@
                                </span>
                                @Html.DropDownListFor(u => u.Gender, new List<SelectListItem>
                                    {
                                        new SelectListItem{ Text="Male", Value="Male"},
                                        new SelectListItem{ Text="Female", Value="Female"}
                                    }, "--- Select ---", new { @class = "form-control" })
                            </div>
                        </div>
                        @Html.ValidationMessageFor(model => model.Gender, "", new { @class = "text-danger" })
                    </div>
                    <!-- Text input-->
                    <div class="form-group">
                        <label class="control-label">Password</label><span style="color:red;">*</span>
                        <div class=" inputGroupContainer">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="fa fa-lock" aria-hidden="true"></i></span>
                                @Html.PasswordFor(u => u.Password, new { @class = "form-control", @placeholder = "Password" })
                            </div>
                        </div>
                        @Html.ValidationMessageFor(u => u.Password, "", new { @style = "font-family: inherit;color:#ff6666;" })
                    </div>
                    <!-- Text input-->
                    <div class="form-group">
                        <label class="control-label">Confirm Password</label><span style="color:red;">*</span>
                        <div class=" inputGroupContainer">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="fa fa-lock" aria-hidden="true"></i></span>
                                @Html.PasswordFor(u => u.ConfirmPassword, new { @class = "form-control", @placeholder = "Confirm Password" })
                            </div>
                        </div>
                        @Html.ValidationMessageFor(u => u.ConfirmPassword, "", new { @style = "font-family: inherit;color:#ff6666;" })
                    </div>
                    <div class="form-group">
                        <label class="control-label"></label>
                        <button type="submit" class="btn btn-primary">Submit <i class="fa fa-paper-plane" aria-hidden="true"></i></button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

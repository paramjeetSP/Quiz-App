@model  QuizApps.Models.ProgamingTestList
@{
    ViewBag.Title = "ProgrammingQuiz_list";

}

<div class="hidden" id="url-edit-test-home">@Url.Action("Edittest", "Home")</div>
<div class="hidden" id="url-update-test-home">@Url.Action("UpdateTest", "Home")</div>
<div class="hidden" id="url-show-programming-test-home">@Url.Action("ShowProgramingTest", "Home")</div>
<div class="hidden" id="url-delete-test-home">@Url.Action("DeleteProgrammingTest", "Home")</div>
<table id="programmingListQuiz" class="table table-striped table-bordered dt-responsive nowrap" style="width: 100%;">
    <thead class="thead-dark">
        <tr>
            <th class="hidden">Test ID</th>
            <th>Test Name</th>
            <th>Test Duration</th>
            <th>No Of Questions</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>

        @{
            if (Model.ProgList.Count > 0)
            {
                for (var item = 0; item < Model.ProgList.Count(); ++item)
                {
                    <tr id="Test' + counter + '" class="panel panel-default custom-body text-center">
                        <td class="text-center hidden">
                            @Model.ProgList[item].Testid
                        </td>
                        <td class="text-center">
                            @Model.ProgList[item].TestName
                        </td>
                        <td class="text-center">
                            @Model.ProgList[item].TestDuration Minutes
                        </td>
                        <td class="text-center">
                            @if (@Model.ProgList[item].HasQuestions != null && (bool)@Model.ProgList[item].HasQuestions)
                            {
                                @Model.ProgList[item].NoofQuestion
                            }
                            else
                            {
                                @Model.ProgList[item].NoofQuestion
                            }
                        </td>
                        <td class="">
                            @*<a class="edit-test btn btn-info">Edit Test</a>*@
                            <input type="button" class="edit-test btn btn-info" value="Edit Test" onclick="GetTest('@Model.ProgList[item].Testid');" data-toggle="modal" data-target="#QuestionEdit">
                            <a class="delete-test btn btn-danger" onclick="DeleteTest('@Model.ProgList[item].Testid');">Delete Test</a>
                            @*<a href="@Url.Action("Edittest", "Home")" class="add-questions btn btn-info">Add Questions</a>*@
                            @if (@Model.ProgList[item].HasQuestions == null || !(bool)@Model.ProgList[item].HasQuestions)
                            {

                                @Html.ActionLink("Add Questions", "AddQuestions", "Home", new { id = @Model.ProgList[item].Testid }, new { @class = "add-questions btn btn-info" })
                            }
                            else {

                                @Html.ActionLink("Edit Questions", "EditQuestion", "Home", new { id = @Model.ProgList[item].Testid }, new { @class = "add-questions btn btn-info" })
                                @Html.ActionLink("Show Questions", "ShowQuestions", "Home", new { id = @Model.ProgList[item].Testid }, new { @class = "show-questions btn btn-info" })
                            }
                            @*<input type="button" value="Edit" onclick="location.href='@Url.Action("Edittest", "Home")?id=' + @Model.ProgList[item].Testid" data-toggle="QuestionEdit" ,data-target="QuestionEdit" />*@
                        </td>


                        @*<input type="button" value="Delete" onclick="location.href='@Url.Action("Delete", "Home")?id=' + document.getElementById('Id_Of_Textbox').value" />*@

                        @*</td>*@
                    </tr>
                }
            }
        }
    </tbody>


</table>

